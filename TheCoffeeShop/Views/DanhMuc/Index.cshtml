@model IEnumerable<TheCoffeeShop.Models.DanhMuc>
@{
    ViewData["Title"] = "Danh sách danh mục";
}

<div class="container mt-4">
    <div class="card shadow rounded-3">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <a asp-action="Create" class="btn btn-primary">+ Thêm danh mục</a>
        </div>

        <div class="card-body">
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form method="get" class="mb-3">
                <div class="input-group">
                    <input type="text" name="search" value="@Context.Request.Query["search"]" class="form-control" placeholder="Tìm kiếm theo tên hoặc mô tả" />
                    <button type="submit" class="btn btn-outline-secondary">Tìm</button>
                </div>
            </form>

            <table class="table table-bordered table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Tên danh mục</th>
                        <th>Mô tả</th>
                        <th style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenDanhMuc</td>
                            <td>@item.MoTa</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-warning">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@item.MaDanhMuc" class="btn btn-sm btn-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
