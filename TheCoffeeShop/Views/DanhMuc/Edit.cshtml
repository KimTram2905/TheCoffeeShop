@model TheCoffeeShop.Models.DanhMuc
@{
    ViewData["Title"] = "Xóa danh mục";
}
<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc chắn muốn xóa danh mục sau?</h4>
<div>
    <strong>Tên danh mục:</strong> @Model.TenDanhMuc <br />
    <strong>Mô tả:</strong> @Model.MoTa
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="MaDanhMuc" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
