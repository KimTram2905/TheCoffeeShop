@model TheCoffeeShop.Models.DanhMuc
@{
    ViewData["Title"] = "Thêm danh mục mới";
}
<div class="container mt-5">
    <h2 class="text-coffee mb-4">@ViewData["Title"]</h2>
    <div class="card p-4 shadow-sm">
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="TenDanhMuc" class="form-label fw-bold text-coffee"></label>
                <input asp-for="TenDanhMuc" class="form-control" placeholder="Nhập tên danh mục (VD: Cà phê sữa, Trà)" />
                <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MoTa" class="form-label fw-bold text-coffee"></label>
                <textarea asp-for="MoTa" class="form-control" rows="5" placeholder="Nhập mô tả danh mục (VD: Các loại đồ uống có sữa)"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary w-100">Thêm danh mục</button>
                <a asp-action="Index" class="btn btn-secondary w-100">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
