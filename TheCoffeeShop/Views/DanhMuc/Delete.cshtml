@model TheCoffeeShop.Models.DanhMuc
@{
    ViewData["Title"] = "Xóa danh mục";
}

<div class="container mt-4">
    <div class="card shadow rounded-3 border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-bold">Bạn có chắc chắn muốn xóa danh mục sau?</p>

            <dl class="row">
                <dt class="col-sm-3">Tên danh mục</dt>
                <dd class="col-sm-9">@Model.TenDanhMuc</dd>

                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">@Model.MoTa</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="MaDanhMuc" />
                <div class="d-flex justify-content-start mt-4">
                    <button type="submit" class="btn btn-danger me-2">Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>
