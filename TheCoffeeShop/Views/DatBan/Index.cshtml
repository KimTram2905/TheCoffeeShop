@model List<TheCoffeeShop.Models.Ban>
@{
    ViewData["Title"] = "Danh sách bàn";
}
<div class="container mt-5">
    <h2 class="text-coffee mb-4">@ViewData["Title"]</h2>
    <div class="card p-4 shadow-sm">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <form method="get" asp-action="Index" class="d-flex gap-2 w-50">
                <input type="text" name="search" class="form-control" placeholder="Tìm kiếm bàn..." />
                <button type="submit" class="btn btn-primary"><i class="fas fa-search me-2"></i>Tìm</button>
            </form>
            <a asp-action="Create" class="btn btn-explore"><i class="fas fa-plus me-2"></i>Thêm bàn</a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Tên bàn</th>
                        <th>Trạng thái</th>
                        <th>Sức chứa</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TenBan</td>
                                <td>@item.TrangThai</td>
                                <td>@item.SucChua người</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.MaBan" class="btn btn-sm btn-primary me-2"><i class="fas fa-edit me-1"></i>Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@item.MaBan" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt me-1"></i>Xóa</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">Không có bàn nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
