    <label>Tên bàn</label>
    <input asp-for="TenBan" /><br />

    <label>Trạng thái</label>
    <input asp-for="TrangThai" /><br />

    <label>Sức chứa</label>
    <input asp-for="SucChua" type="number" /><br />

    <button type="submit">Lưu</button>
