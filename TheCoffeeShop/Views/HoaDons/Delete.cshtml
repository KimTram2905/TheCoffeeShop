@model TheCoffeeShop.Models.HoaDon

@{
    ViewData["Title"] = "Xóa hóa đơn";
}

<div class="container py-4">
    <div class="mb-4">
        <h2 class="text-danger fw-bold">
            <i class="fas fa-trash-alt me-2"></i>Xóa hóa đơn #@Model.MaHoaDon
        </h2>
        <p class="text-muted">Bạn có chắc chắn muốn xóa hóa đơn này? Thao tác này không thể hoàn tác.</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Ngày thanh toán</dt>
                <dd class="col-sm-9">@Model.NgayThanhToan.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Tổng tiền</dt>
                <dd class="col-sm-9 text-danger fw-bold">@Model.TongTien.ToString("N0")₫</dd>

                <dt class="col-sm-3">Phương thức thanh toán</dt>
                <dd class="col-sm-9">@Model.PhuongThucThanhToan</dd>

                <dt class="col-sm-3">Mã đơn hàng</dt>
                <dd class="col-sm-9">@Model.MaDonHangNavigation?.MaDonHang</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaHoaDon" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-1"></i> Xác nhận xóa
            </button>
        </div>
    </form>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
