@model List<TheCoffeeShop.Models.HoaDon>

@{
    ViewData["Title"] = "Danh sách hóa đơn";
}

<div class="container py-4">
    <!-- Tiêu đề -->
    <div class="mb-4">
        <h2 class="text-primary fw-bold">
            <i class="fas fa-file-invoice-dollar me-2"></i>@ViewData["Title"]
        </h2>
        <p class="text-muted">Xem thông tin chi tiết các hóa đơn đã thanh toán.</p>
    </div>

    <!-- Bảng hóa đơn -->
    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Ngày thanh toán</th>
                                <th>Phương thức thanh toán</th>
                                <th>Mã đơn hàng</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.NgayThanhToan.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.PhuongThucThanhToan</td>
                                    <td>@item.MaDonHangNavigation?.MaDonHang</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.MaHoaDon" class="btn btn-sm btn-info me-1">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.MaHoaDon" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt"></i> Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">Không có hóa đơn nào để hiển thị.</div>
            }
        </div>
    </div>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
