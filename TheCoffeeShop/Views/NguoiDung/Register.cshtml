@model TheCoffeeShop.Models.NguoiDung
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4">
            <h2 class="text-center mb-4">
                Đăng ký
            </h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center" role="alert" style="border-radius: 8px;">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert" style="border-radius: 8px;">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Vui lòng kiểm tra lại thông tin:</h6>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label class="form-label">Tên đăng nhập</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-user me-2"></i>
                        </span>
                        <input asp-for="TenDangNhap" class="form-control border-start-0" placeholder="Nhập tên đăng nhập" required />
                    </div>
                    <span asp-validation-for="TenDangNhap" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mật khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-lock me-2"></i>
                        </span>
                        <input asp-for="MatKhau" type="password" class="form-control border-start-0" placeholder="Nhập mật khẩu" required />
                    </div>
                    <span asp-validation-for="MatKhau" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Họ và tên</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-id-card me-2"></i>
                        </span>
                        <input asp-for="HoTen" class="form-control border-start-0" placeholder="Nhập họ và tên" required />
                    </div>
                    <span asp-validation-for="HoTen" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Số điện thoại</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-phone me-2"></i>
                        </span>
                        <input asp-for="SoDienThoai" class="form-control border-start-0" placeholder="Ví dụ: 0987654321" required />
                    </div>
                    <span asp-validation-for="SoDienThoai" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-envelope me-2"></i>
                        </span>
                        <input asp-for="Email" type="email" class="form-control border-start-0" placeholder="Ví dụ: user@example.com" required />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label">Địa chỉ</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-home"></i>
                        </span>
                        <input asp-for="DiaChi" class="form-control border-start-0" placeholder="Nhập địa chỉ" required />
                    </div>
                    <span asp-validation-for="DiaChi" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2">
                    <i class="fas fa-user-plus me-2"></i>Đăng ký
                </button>
            </form>

            <p class="text-center mt-3">
                </i>Đã có tài khoản?
                <a href="/NguoiDung/Login">Đăng nhập ngay</a>
            </p>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}