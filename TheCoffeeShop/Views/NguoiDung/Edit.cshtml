@model TheCoffeeShop.Models.NguoiDung
@{
    ViewData["Title"] = "Sửa người dùng";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4">
            <h2 class="text-center mb-4">Sửa người dùng</h2>
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="MaNguoiDung" />
                <div class="mb-3">
                    <label asp-for="TenDangNhap" class="form-label">Tên đăng nhập</label>
                    <input asp-for="TenDangNhap" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="HoTen" class="form-label">Họ tên</label>
                    <input asp-for="HoTen" class="form-control" required />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="SoDienThoai" class="form-label">Số điện thoại</label>
                    <input asp-for="SoDienThoai" class="form-control" required />
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="VaiTro" class="form-label">Vai trò</label>
                    <select asp-for="VaiTro" class="form-control" required>
                        <option value="Quản lý">Quản lý</option>
                        <option value="Nhân viên">Nhân viên</option>
                        <option value="Khách hàng">Khách hàng</option>
                    </select>
                    <span asp-validation-for="VaiTro" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Cập nhật</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}