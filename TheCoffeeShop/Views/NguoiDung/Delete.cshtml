@model TheCoffeeShop.Models.NguoiDung
@{
    ViewData["Title"] = "Xóa người dùng";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4">
            <h2 class="text-center mb-4">
                <i class="fas fa-user-times text-danger me-2"></i>Xóa người dùng
            </h2>

            <div class="alert alert-warning mb-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                    <div>
                        <h5 class="alert-heading mb-1">Cảnh báo!</h5>
                        <p class="mb-0">Bạn sắp xóa người dùng <strong>@Model.HoTen</strong> (@Model.TenDangNhap)</p>
                    </div>
                </div>
            </div>

            <div class="user-details mb-4 p-3 bg-light rounded">
                <div class="mb-2">
                    <i class="fas fa-envelope me-2"></i> <strong>Email:</strong> @Model.Email
                </div>
                <div class="mb-2">
                    <i class="fas fa-phone me-2"></i> <strong>SĐT:</strong> @Model.SoDienThoai
                </div>
                <div>
                    <i class="fas fa-user-tag me-2"></i> <strong>Vai trò:</strong> @Model.VaiTro
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="MaNguoiDung" />

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-danger py-2">
                        <i class="fas fa-trash-alt me-2"></i>Xác nhận xóa
                    </button>
                    <a asp-action="ManageUsers" class="btn btn-outline-secondary py-2">
                        <i class="fas fa-times me-2"></i>Hủy bỏ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>