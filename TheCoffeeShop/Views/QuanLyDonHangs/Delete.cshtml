@model TheCoffeeShop.Models.DonHang

@{
    ViewData["Title"] = "Xóa đơn hàng";
}

<div class="container py-4">
    <!-- Tiêu đề -->
    <div class="mb-4">
        <h2 class="text-danger fw-bold">
            <i class="fas fa-trash-alt me-2"></i>@ViewData["Title"]
        </h2>
        <p class="text-muted">Bạn có chắc chắn muốn xóa đơn hàng sau?</p>
    </div>

    <!-- Thông tin đơn hàng -->
    <div class="card shadow-sm mb-4 border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông Tin Đơn Hàng</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Thời gian tạo:</dt>
                <dd class="col-sm-8">@Model.ThoiGianTao.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-4">Thời gian cập nhật:</dt>
                <dd class="col-sm-8">@Model.ThoiGianCapNhat.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-4">Loại đơn hàng:</dt>
                <dd class="col-sm-8">@Model.LoaiDonHang</dd>

                <dt class="col-sm-4">Trạng thái:</dt>
                <dd class="col-sm-8">@Model.TrangThai</dd>

                <dt class="col-sm-4">Bàn:</dt>
                <dd class="col-sm-8">@(Model.MaBanNavigation?.TenBan ?? "(Không có bàn)")</dd>

                <dt class="col-sm-4">Khách hàng:</dt>
                <dd class="col-sm-8">@(Model.MaNguoiDungNavigation?.TenDangNhap ?? "")</dd>
            </dl>
        </div>
    </div>

    <!-- Form xác nhận xóa -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaDonHang" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="fas fa-trash me-1"></i>Xác nhận xóa
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
        </a>
    </form>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
