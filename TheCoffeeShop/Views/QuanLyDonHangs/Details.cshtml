@model TheCoffeeShop.Models.DonHang

@{
    ViewData["Title"] = "Details";
}

<h1>Chi tiết đơn hàng</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Thời gian tạo
        </dt>
        <dd class="col-sm-10">
            @Model.ThoiGianTao
        </dd>
        <dt class="col-sm-2">
            Thời gian cập nhật
        </dt>
        <dd class="col-sm-10">
            @Model.ThoiGianCapNhat
        </dd>
        <dt class="col-sm-2">
            Loại đơn hàng
        </dt>
        <dd class="col-sm-10">
            @Model.LoaiDonHang
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @Model.TrangThai
        </dd>
        <dt class="col-sm-2">
            Mã bàn
        </dt>
        <dd class="col-sm-10">
            @Model.MaBanNavigation?.MaBan
        </dd>
        <dt class="col-sm-2">
            Mã khách hàng
        </dt>
        <dd class="col-sm-10">
            @Model.MaNguoiDungNavigation?.MaNguoiDung
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MaDonHang">Chỉnh sửa</a> |
    <a asp-action="Index">Quay lại danh sách</a>
</div>
