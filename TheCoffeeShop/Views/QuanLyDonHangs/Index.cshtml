@model List<TheCoffeeShop.Models.DonHang>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<h2>@ViewData["Title"]</h2>

<form method="get" asp-action="Index" class="row g-3 mb-4">
    <div class="col-md-3">
        <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Lọc theo tên khách hoặc mã đơn" />
    </div>
    @*<div class="col-md-2">
        <input type="number" name="ngay" value="@ViewBag.Ngay" value="1" class="form-control" placeholder="Ngày" min="1" max="30" />
    </div>
    <div class="col-md-2">
        <input type="number" name="thang" value="@ViewBag.Thang" value="1" class="form-control" placeholder="Tháng" min="1" max="12" />
    </div>
    <div class="col-md-2">
        <input type="number" name="nam" value="@ViewBag.Nam" value="2025" class="form-control" placeholder="Năm" min="2025" />
    </div>*@
    <select name="month" class="form-control">
        <option value="">Lọc theo tháng</option>
        @for (int m = 1; m <= 12; m++)
        {
            <option value="@m">Tháng @m</option>
        }
    </select>

    <select name="year" class="form-control ml-2">
        <option value="">Lọc theo năm</option>
        @for (int y = 2024; y <= DateTime.Now.Year; y++)
        {
            <option value="@y">@y</option>
        }
    </select>
    <div class="col-md-2">
        <button type="submit" class="btn btn-success">Lọc</button>
    </div>
</form>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Tên khách</th>
            <th>Ngày tạo</th>
            <th>Loại đơn</th>
            <th>Mã bàn</th>
            <th>Phương thức thanh toán</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaDonHang</td>
                <td>@item.MaNguoiDungNavigation?.TenDangNhap</td>
                <td>@item.ThoiGianTao.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.LoaiDonHang</td>
                <td>@item.MaBan</td>
                <td>
                    @if (item.HoaDon == null || string.IsNullOrEmpty(item.HoaDon.PhuongThucThanhToan) || item.HoaDon.PhuongThucThanhToan == "Chưa thanh toán")
                    {
                        <a asp-controller="Orders" asp-action="Create" asp-route-id="@item.MaDonHang" class="text-danger">Chưa thanh toán</a>
                    }
                    else
                    {
                        @item.HoaDon.PhuongThucThanhToan
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaDonHang" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaDonHang" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaDonHang" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
