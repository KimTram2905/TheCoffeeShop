<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Coffee Shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <div class="flex-grow-1 d-flex flex-column">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-coffee shadow-sm">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center" href="/">
                        <img src="~/images/logo.png" alt="The Coffee Shop" height="40" class="me-2" />
                        <span class="fw-bold">The Coffee Shop</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                            </li>
                            @if (User.IsInRole("Quản lý") || User.IsInRole("Nhân viên"))
                            {
                                @* Dropdown: Quản lý danh mục và sản phẩm *@
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        Quản lý danh mục và sản phẩm
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="DanhMuc" asp-action="Index">Quản lý danh mục</a></li>
                                        <li><a class="dropdown-item" asp-controller="SanPham" asp-action="Index">Quản lý sản phẩm</a></li>
                                    </ul>
                                </li>
                                @* Dropdown: Quản lý bàn và đặt chỗ  *@
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        Quản lý bàn và đặt chỗ
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="DatBan" asp-action="Index">Quản lý bàn</a></li>
                                        <li><a class="dropdown-item" asp-controller="DatCho" asp-action="Index">Quản lý đặt chỗ</a></li>
                                    </ul>
                                </li>
                                @if (User.IsInRole("Quản lý"))
                                {

                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="ThongKe" asp-action="Index">Thống kê</a>
                                    </li>

                                }

                            }
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="container py-4 flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-coffee text-white py-5">
        <div class="container">
            <div class="row">
                <!-- Thông tin liên hệ -->
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Liên hệ</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            170 An Dương Vương,Quy Nhơn
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-phone-alt me-2"></i>
                            <a href="tel:+84379133089" class="text-white">0379133089</a>
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-envelope me-2"></i>
                            <a href="mailto:thecoffeeshop@gmail.com" class="text-white">thecoffeeshop@gmail.com</a>
                        </li>
                    </ul>
                </div>

                <!-- Giờ mở cửa -->
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="text-uppercase mb-4">Giờ mở cửa</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">Thứ 2 - Thứ 6: 7:00 - 22:00</li>
                        <li class="mb-2">Thứ 7: 8:00 - 23:00</li>
                        <li>Chủ nhật: 8:00 - 21:00</li>
                    </ul>
                </div>

                <!-- Mạng xã hội -->
                <div class="col-md-4">
                    <h5 class="text-uppercase mb-4">Kết nối với chúng tôi</h5>
                    <div class="social-icons">
                        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f fa-lg"></i></a>
                        <a href="#" class="text-white me-3"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-white"><i class="fab fa-tiktok fa-lg"></i></a>
                    </div>
                </div>
            </div>
            <hr class="my-4 bg-light" />
            <div class="text-center pt-2">
                <p class="mb-0">© 2025 The Coffee Shop. All rights reserved.</p>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Tìm tất cả các phần tử thông báo
            const messages = document.querySelectorAll('.alert');
            messages.forEach(function (message) {
                setTimeout(function () {
                    message.style.transition = 'opacity 0.5s ease';
                    message.style.opacity = '0';
                    setTimeout(function () {
                        message.remove();
                    }, 500); // Xóa hoàn toàn sau khi mờ dần
                }, 5000); // Ẩn sau 3 giây
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
