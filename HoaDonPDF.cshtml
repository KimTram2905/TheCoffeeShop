@model QuanLyQuanCafe.Models.HoaDon
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Hóa đơn @Model.MaHoaDon</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #000;
            padding: 5px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h2>HÓA ĐƠN THANH TOÁN</h2>
    <p><strong>Mã hóa đơn:</strong> @Model.MaHoaDon</p>
    <p><strong>Ngày thanh toán:</strong> @Model.NgayThanhToan.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Khách hàng:</strong> @Model.MaDonHangNavigation.MaNguoiDungNavigation?.TenDangNhap</p>
    <p><strong>Phương thức:</strong> @Model.PhuongThucThanhToan</p>

    <h4>Chi tiết đơn hàng</h4>
    <table>
        <thead>
            <tr>
                <th>Tên món</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Ghi chú</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ct in Model.MaDonHangNavigation.ChiTietDonHangs)
            {
                <tr>
                    <td>@ct.MaSanPhamNavigation?.TenSanPham</td>
                    <td>@ct.SoLuong</td>
                    <td>@ct.DonGia.ToString("N0")</td>
                    <td>@ct.GhiChu</td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Tổng tiền:</strong> @Model.TongTien.ToString("N0") VNĐ</p>
</body>
</html>
